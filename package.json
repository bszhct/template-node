{
  "name": "@bszhct/component-node",
  "version": "0.0.1",
  "description": "通用的 Node Cli 脚手架",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "eslint": "eslint . --ext .ts,.tsx",
    "es:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "bin": {
    "bs": "./bin/bs"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "license": "ISC",
  "author": "bszhct",
  "dependencies": {
    "chalk": "4.0.0",
    "commander": "5.1.0",
    "download-git-repo": "3.0.2",
    "fs-extra": "9.0.0",
    "http-server": "0.12.1",
    "inquirer": "7.1.0",
    "lodash": "4.17.15",
    "ora": "4.0.4",
    "shelljs": "0.8.4",
    "update-notifier": "4.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "8.1.0",
    "@types/node": "13.13.2",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "@typescript-eslint/parser": "2.29.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "lint-staged": "10.1.7",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run es:fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": false,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {},
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "useJSXTextNode": true,
      "project": "tsconfig.json"
    }
  },
  "files": [
    "bin",
    "lib"
  ],
  "eslintIgnore": [
    "bin",
    "lib"
  ]
}
